<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:GotHoursDesktop" xmlns:Entities="clr-namespace:GotHoursDAL.Entities;assembly=GotHoursDAL" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="GotHoursDesktop.MainWindow"
	x:Name="wndGotHours"
	Title="GotHours"
	Width="640" Height="76" mc:Ignorable="d" Background="#FF3A6F82">
	<Window.Resources>
		<DataTemplate  x:Key="TaskTemplate" DataType="{x:Type Entities:Task}">
			<StackPanel>
			<TextBlock Text="{Binding TaskName}"/>
			</StackPanel>

		</DataTemplate>
	</Window.Resources>

	<Grid x:Name="LayoutRoot" VerticalAlignment="Top" Height="33">
		<ComboBox x:Name="cbxTask" Margin="25,8,143,8" IsEditable="True" FontFamily="Raavi" FontSize="10.667" ItemTemplate="{StaticResource TaskTemplate}" />
		<Button x:Name="btnLogTime" HorizontalAlignment="Right" Margin="0,9,17,8" Width="101" Content="Log time" FontFamily="Raavi" FontSize="9.333" Click="btnLogTime_Click" />
		<Popup x:Name="popUpLogTime" AllowsTransparency="True" PopupAnimation="Slide" StaysOpen="False">
			<Grid x:Name="grdPopUpLogTime" Background="#FFCEC71D" MinWidth="100" MinHeight="100">
				<TextBlock x:Name="txtPopUpLogTime" TextWrapping="Wrap" FontFamily="Viner Hand ITC" Margin="5" MaxWidth="200" TextAlignment="Center"/>
			</Grid>
		</Popup>
	</Grid>
	

</Window>
