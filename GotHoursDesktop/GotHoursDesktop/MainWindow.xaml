<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:GotHoursDesktop" xmlns:Entities="clr-namespace:GotHoursDAL.Entities;assembly=GotHoursDAL" x:Class="GotHoursDesktop.MainWindow"
	x:Name="wndGotHours"
	Title="GotHours"
	Width="640" Height="76">
	<Window.Resources>
		<DataTemplate  x:Key="TaskTemplate" DataType="{x:Type Entities:Task}">
			<StackPanel>
			<TextBlock Text="{Binding Path=TaskName}"/>
			</StackPanel>

		</DataTemplate>
	</Window.Resources>

	<Grid x:Name="LayoutRoot" VerticalAlignment="Top" Height="33">
		<ComboBox x:Name="cbxTask" Margin="25,8,143,8" IsEditable="True" FontFamily="Raavi" FontSize="10.667" ItemTemplate="{StaticResource TaskTemplate}" >

		</ComboBox>
		<Button x:Name="btnLogTime" HorizontalAlignment="Right" Margin="0,9,17,8" Width="101" Content="Log time" FontFamily="Raavi" FontSize="9.333" Click="btnLogTime_Click" />
		<Popup/>
		<Grid HorizontalAlignment="Left" Margin="0,-135,0,0" VerticalAlignment="Top" Width="100" Height="100" RenderTransformOrigin="0.507,0.503" Background="#FFE6E656">
			<TextBlock Margin="3.75,0,0,0" TextWrapping="Wrap" FontFamily="Viner Hand ITC"/>
		</Grid>
	</Grid>
</Window>